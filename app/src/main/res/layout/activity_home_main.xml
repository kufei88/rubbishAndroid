<?xml version="1.0" encoding="utf-8"?>
<com.boosal.smartlibrary.view.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/empty"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_rub"
        android:layout_centerHorizontal="true"/>
    
    <Button
        android:id="@+id/home_btn_gotorecognize"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/bg_btn_big"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_below="@+id/empty"
        android:text="@string/recognition"
        android:textSize="@dimen/text_22sp"
        android:textColor="@color/themeWhite"/>
    
</com.boosal.smartlibrary.view.MyRelativeLayout>
